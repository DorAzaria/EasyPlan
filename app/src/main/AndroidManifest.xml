<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.easyplan">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyPlan">

        <activity
            android:name=".Controller.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".Controller.EndPlanActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.TraineeHomepageActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.MakePlanActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:exported="false" />
        <activity
            android:name=".Controller.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.TraineeListActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.RegisterTrainerActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.RegisterTraineeActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.SelectTargetActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.RegisterByTypeActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.TrainerHomepageActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.TrainerListActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.LoginActivity"
            android:exported="false" />

        <service
            android:name=".Model.FirebaseMessagingService"
            android:permission="TODO"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>


</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="450dp"
        app:cardBackgroundColor="#E6E5E5"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/new_plan_nutrition_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/checklist_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.034" />

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="20dp"
                android:id="@+id/new_plan_nutrition_card"
                android:layout_width="250dp"
                android:layout_height="350dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_plan_nutrition_image"
                app:layout_constraintVertical_bias="0.636">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Day 1"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Day 2"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Day 3"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Day 4"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Day 5"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Day 6"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Cheat Day"
                        android:layout_marginTop="10dp"
                        />



                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
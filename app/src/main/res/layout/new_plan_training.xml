<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E6E5E5"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/frame_background">

            <ImageView
                android:id="@+id/new_plan_training_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/muscle_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp"
                app:layout_constraintVertical_bias="0.034" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/new_plan_training_image"
                app:layout_constraintVertical_bias="0.063">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/make_plan_train_number"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:text="Train 1"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/make_plan_train_time1"
                        android:layout_marginTop="10dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textSize="15dp"
                        android:windowSoftInputMode="adjustPan"
                        android:background="@drawable/edit_text_background"
                        android:hint="Time Of Train"
                        />

                    <EditText
                        android:id="@+id/make_plan_train_exer1"
                        android:layout_marginTop="10dp"
                        android:inputType="textMultiLine"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:windowSoftInputMode="adjustPan"
                        android:background="@drawable/edit_text_background"
                        android:hint="Exercises"
                        android:layout_marginBottom="10dp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView4"
                android:layout_marginBottom="10dp"
                app:layout_constraintVertical_bias="0.063">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:text="Train 2"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/make_plan_train_time2"
                        android:layout_marginTop="10dp"
                        android:layout_width="250dp"
                        android:windowSoftInputMode="adjustPan"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Time Of Train"
                        />

                    <EditText
                        android:id="@+id/make_plan_train_exer2"
                        android:layout_marginTop="10dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:windowSoftInputMode="adjustPan"
                        android:inputType="textMultiLine"
                        android:textSize="15dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Exercises"
                        android:layout_marginBottom="10dp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView7"
                app:layout_constraintVertical_bias="0.063">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Train 3"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/make_plan_train_time3"
                        android:layout_marginTop="10dp"
                        android:inputType="textMultiLine"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:windowSoftInputMode="adjustPan"
                        android:background="@drawable/edit_text_background"
                        android:hint="Time Of Train"
                        />

                    <EditText
                        android:id="@+id/make_plan_train_exer3"
                        android:layout_marginTop="10dp"
                        android:inputType="textMultiLine"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:windowSoftInputMode="adjustPan"
                        android:textSize="15dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Exercises"
                        android:layout_marginBottom="10dp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>